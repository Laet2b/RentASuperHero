<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1478720568477-152d9b164e26?ixid=MnwxMjA3fDB8MHxzZWFyY2h8NHx8Y2luZW1hfGVufDB8fDB8fA%3D%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60);">
  <div class="container">
    <h1>Rent your hero to do the work you don't want to do</h1>
    <p>Search them by power</p>
  </div>
</div>

<div class="main-container">
  <div class="title-and-actions">
    <h1>My heros</h1>
    <%= button_to "Add a hero", new_hero_path, :class => "btn btn-primary", :method => :get %>
  </div>
  <div class="cards-container my-hero">
  <% @heros.each do |hero| %>
    <% if hero.photo.attached? %>
      <div class="hero-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path hero.photo.key, height: 200, crop: :fill %>')">
        <a class="hero-title" href='/heros/<%= hero.id %>'>
          <span class="hero-name"><%= hero.name %></span>
          <br>
          <a class="delete" data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/heros/<%= hero.id %>">Remove</a>
        </a>
      </div>
    <% else %>
      <div class="hero-card">
        <a class="hero-title" href='/heros/<%= hero.id %>'>
          <span class="hero-name"><%= hero.name %></span>
          <br>
          <a class="delete" data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/heros/<%= hero.id %>">Remove</a>
        </a>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
