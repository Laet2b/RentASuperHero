<div class="show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://fr.web.img5.acsta.net/newsv7/19/07/24/17/36/5687790.jpg);">
  <div class="banner-text-container">
    <h1>Rent a hero to do the work you can't do</h1>

  </div>
</div>

<div class="main-container">
  <div class="justify-content-center" style=" width: 100%">
    <h1>
      <span>CHOOSE YOUR</span>
      <div>
        <strong>Hero</strong>
     </div>
    </h1>
  <p>Avec plus de <%= Hero.count %> héros disponibles, vous en trouverez forcément un qui vous corresponde</p>
  </div>
  <div class="title-and-actions d-flex align-items-baseline justify-content-center">

     <!--  <%= form_tag heros_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a hero"
        %>

      <%= button_tag :submit, class: "btn-violet" do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %> -->
  </div>
  <div class="d-flex justify-content-center">
      <%= link_to "All" , heros_path(:all), class: "btn-violet"  %>
      <%= link_to "Strength" , heros_path(strength: 80), class: "btn-violet"  %>
      <%= link_to "Intelligence" , heros_path(intelligence: 80), class: "btn-violet"  %>
      <%= link_to "Power" , heros_path(power: 80), class: "btn-violet"  %>
      <%= link_to "Speed" , heros_path(speed: 80), class: "btn-violet"  %>
      <%= link_to "Durability" , heros_path(durability: 80), class: "btn-violet"  %>
      <%= link_to "Combat" , heros_path(combat: 80), class: "btn-violet"  %>
  </div>


  <div class="cards-container row">
  <% @heros.each do |hero| %>
    <% if hero.photo.attached? %>
     <a class="hero-title col-2" href='/heros/<%= hero.id %>'>
      <div class="hero-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path hero.photo.key, height: 200, crop: :fill %>')">
          <span class="hero-name"><%= hero.name %></span>
      </div>
     </a>
    <% else %>
      <a class="hero-title col-2" href='/heros/<%= hero.id %>'>
      <div class="hero-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= hero.picture %>')">
          <span class="hero-name"><%= hero.name %></span>
      </div>
    </a>
    <% end %>
  <% end %>
  </div>
</div>
